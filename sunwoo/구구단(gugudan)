<template>
  <div id="app">
    <form>
      <input type="text" placeholder="값을 입력하세요" v-model="number">
      
      <ul class="main_ul" v-if="number">
        <ul class="divide" v-for="j in list()" v-bind:key="j">
          <li v-for="i in 9" v-bind:key="i"> {{ j+1 }} x {{ i }} = <span class="color">{{ (j+1)*i }}</span></li><span class="color"></span>
        </ul>
      </ul>
      
    </form>
    
  </div>
</template>

<script>
  export default {
    data(){
      return{
        number : '',
        list: function() {
          let list = [];
          for(let k=0; k<parseInt(this.number); k++){
            console.log(list)
            list.push(k)
          }
        return list
        }
      }
    },
    methods: {
      // test : function() {
      //   this.number = parseInt(this.number)
      // }
    }
  }
</script>



